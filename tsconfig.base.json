{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@blogger/global-interfaces": ["libs/global-interfaces/src/index.ts"],
      "@blogger/middleware-api-error": [
        "libs/middleware-api-error/src/index.ts"
      ],
      "@blogger/middleware-auth": ["libs/middleware-auth/src/index.ts"],
      "@blogger/middleware-validator": [
        "libs/middleware-validator/src/index.ts"
      ],
      "@blogger/rabbitmq-manager": ["libs/rabbitmq-manager/src/index.ts"],
      "@blogger/redis-manager": ["libs/redis-manager/src/index.ts"],
      "@blogger/util-db-creator": ["libs/util-db-creator/src/index.ts"],
      "@blogger/util-logger": ["libs/util-logger/src/index.ts"],
      "@blogger/util-registry-registrator": [
        "libs/util-registry-registrator/src/index.ts"
      ],
      "@blogger/util-swagger-docs": ["libs/util-swagger-docs/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
